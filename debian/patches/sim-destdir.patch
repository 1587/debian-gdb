Fix some missing uses of DESTDIR in the sim/ directories.  The Debian
packages use DESTDIR to build.

%patch
Index: gdb-dfsg-6.4.50.20060511/sim/Makefile.in
===================================================================
--- gdb-dfsg-6.4.50.20060511.orig/sim/Makefile.in	2006-05-05 13:11:19.000000000 -0400
+++ gdb-dfsg-6.4.50.20060511/sim/Makefile.in	2006-05-11 12:29:51.000000000 -0400
@@ -91,6 +91,7 @@ FLAGS_TO_PASS = \
 	"CC_FOR_BUILD=$(CC_FOR_BUILD)" \
 	"CFLAGS=$(CFLAGS)" \
 	"CFLAGS_FOR_BUILD=$(CFLAGS_FOR_BUILD)" \
+	"DESTDIR=$(DESTDIR)" \
 	"RANLIB=$(RANLIB)" \
 	"MAKEINFO=$(MAKEINFO)" \
 	"INSTALL=$(INSTALL)" \
Index: gdb-dfsg-6.4.50.20060511/sim/erc32/Makefile.in
===================================================================
--- gdb-dfsg-6.4.50.20060511.orig/sim/erc32/Makefile.in	2000-03-07 10:32:49.000000000 -0500
+++ gdb-dfsg-6.4.50.20060511/sim/erc32/Makefile.in	2006-05-11 12:29:31.000000000 -0400
@@ -53,7 +53,7 @@ end.h: end
 # Copy the files into directories where they will be run.
 install-sis: installdirs
 	n=`echo sis | sed '$(program_transform_name)'`; \
-	$(INSTALL_PROGRAM) sis$(EXEEXT) $(bindir)/$$n$(EXEEXT)
+	$(INSTALL_PROGRAM) sis$(EXEEXT) $(DESTDIR)$(bindir)/$$n$(EXEEXT)
 
 clean-sis:
 	rm -f sis end end.h
